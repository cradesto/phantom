{
  "files.exclude": {
    "**/obj": true,
    "**/*.s": true,
    "**/*.sln": true,
    "**/*.vfproj": true,
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/*.un~": true,
    "**/*.o": true,
    "**/*.mod": true,
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true,
    "**/*.sh": true,
    "**/.fmod": true
  },
  "explorerExclude.backup": {},
  "editor.tabSize": 3,
  "fortran.linter.includePaths": [
    "${workspaceFolder}/**/**",
  ],
  // "fortran.linter.extraArgs": [
  //   "-Wunused-variable",
  //   "-Wunused-dummy-argument"
  // ],
  "fortran.linter.modOutput": "${workspaceFolder}/.fmod",
  "fortran.formatting.formatter": "findent",
  "fortran.formatting.findentArgs": [
    "-r1",
    "-m1",
    "-c3",
    "-Rr",
    "-C-",
    "-k-",
    "-j1"
  ],
  "python.defaultInterpreterPath": "${env:PYTHON_INSTALL_LOC}/plonk/bin/python",
  "python.analysis.typeCheckingMode": "basic",
  "editor.detectIndentation": false,
  "todo-tree.tree.scanMode": "workspace",
}
